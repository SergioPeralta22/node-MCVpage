
extends ../layout/index

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div(class="py-5")
        h1(class="text-4xl font-extrabold text-center my-10") Real
            span(class="font-normal text-indigo-600") State
        h2.text-center.text-2xl.font-extrabold=page

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(class="space-y-8")
                div(class="space-y-5")
                    h3(class="text-lg leading-6 font-medium text-gray-900") General Information
                    p(class="text-gray-600") Add information about the property on sale.
                    div
                        label(for="title", class="block uppercase text-sm text-gray-500 my-2 font-bold") Ad Title
                        input(type="text", name="title", id="title", class="border border-gray-300 rounded-md p-2 w-full placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:placeholder-gray-300", placeholder="Property title eg. Beach house")

                    div(class="md:flex md:gap-4")
                        div(class="md:w-1/2")
                            label(for="category", class="block uppercase text-sm text-gray-500 my-2 font-bold") Category
                            select(name="category", id="category", class="border border-gray-300 rounded-md p-2 w-full placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:placeholder-gray-300")
                                option(value="") Select a category
                                option(value="apartment") Apartment
                                option(value="house") House
                                option(value="condo") Condo
                                option(value="townhouse") Townhouse
                                option(value="land") Land
                                option(value="commercial") Commercial
                                option(value="office") Office
                                option(value="other") Other
                        div(class="md:w-1/2")
                            label(for="price", class="block uppercase text-sm text-gray-500 my-2 font-bold") Price Range
                            select(name="price", id="price", class="border border-gray-300 rounded-md p-2 w-full placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:placeholder-gray-300")
                                option(value="") Select a price range
                                option(value="0-500") 0 - 500
                                option(value="500-1000") 500 - 1000
                                option(value="1000-1500") 1000 - 1500
                                option(value="1500-2000") 1500 - 2000
                                option(value="2000-2500") 2000 - 2500
                                option(value="2500-3000") 2500 - 3000
                                option(value="3000-3500") 3000 - 3500
                                option(value="3500-4000") 3500 - 4000
                                option(value="4000-4500") 4000 - 4500
                                option(value="4500-5000") 4500 - 5000
                                option(value="5000-5500") 5000 - 5500
                                option(value="5500-6000") 5500 - 6000
                                option(value="6000-6500") 6000 - 6500
                                option(value="6500-7000") 6500 - 7000
                                option(value="7000-7500") 7000 - 7500
                                option(value="7500-8000") 7500 - 8000
                                option(value="8000-8500") 8000 - 8500
                                option(value="8500-9000") 8500 - 9000
                                option(value="9000-9500") 9000 - 9500
                                option(value="9500-10000") 9500 - 10000
                                option(value="10000-10500") 10000 - 10500
                                option(value="10500-11000") 10500 - 11000
                                option(value="11000-11500") 11000 - 11500
                                option(value="11500-12000") 11500 - 12000
                                option(value="12000-12500") 12000 - 12500
                                option(value="12500-13000") 12500 - 13000
                                option(value="13000-13500") 13000 - 13500
                    div(class="md:flex md:gap-4")
                        //- number of bedrooms
                        div(class="md:w-1/3")
                            label(for="bedrooms", class="block uppercase text-sm text-gray-500 my-2 font-bold") Bedrooms
                            select(name="bedrooms", id="bedrooms", class="border border-gray-300 rounded-md p-2 w-full placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:placeholder-gray-300")
                                option(value="") Select number of bedrooms
                                - var n=1;
                                    while n <= 10
                                        option(value=n) #{n++}
                        //-parking spaces
                        div(class="md:w-1/3")
                            label(for="parking", class="block uppercase text-sm text-gray-500 my-2 font-bold") Parking Spaces
                            select(name="parking", id="parking", class="border border-gray-300 rounded-md p-2 w-full placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:placeholder-gray-300")
                                option(value="") Select number of parking spaces
                                - var n=1;
                                    while n <= 5
                                        option(value=n) #{n++}
                        //-number of bathrooms
                        div(class="md:w-1/3")
                            label(for="bathrooms", class="block uppercase text-sm text-gray-500 my-2 font-bold") Bathrooms
                            select(name="bathrooms", id="bathrooms", class="border border-gray-300 rounded-md p-2 w-full placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:placeholder-gray-300")
                                option(value="") Select number of bathrooms
                                - var n=1;
                                    while n <= 5
                                        option(value=n) #{n++}
                        

                    div
                        label(for="description", class="block uppercase text-sm text-gray-500 my-2 font-bold") Description
                        textarea(name="description", id="description", class="border border-gray-300 rounded-md p-2 w-full placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:placeholder-gray-300", placeholder="Property description, eg. A beautiful beach house located in the center of the city.")
                div(class="border-gray-200 border-t py-5 space-y-5")
                    h3(class="text-lg leading-6 font-medium text-gray-900") Location
                    p(class="text-gray-600") Select the location of your property.
                    #map.h-96


                    div
                        p.street

                    input(type="hidden", name="lat", id="lat")
                    input(type="hidden", name="lng", id="lng")
                    input(type="hidden", name="street", id="street")


block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/map.js")
